{% extends 'base.html.twig' %}





       {%  block content %}

   


      <div id="main-content">
            <div class="container-fluid">

                <div class="block-header py-lg-4 py-3">
                    <div class="row g-3">
                        <div class="col-md-6 col-sm-12">
                            <h2 class="m-0 fs-5"><a href="javascript:void(0);" class="btn btn-sm btn-link ps-0 btn-toggle-fullwidth"><i class="fa fa-arrow-left"></i></a> Ajouter Une categorie</h2>
                          
                        </div>
                     
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">

                        {{form_start(form, {
                            'attr' :{
                                'novalidate' : 'novalidate' , 
                                'style':' margin-left: 277px;'
                            }   
                        })}}
                           
                               
                            </div>
                             {{form_label(form.id,'id')}}
                            {{form_widget(form.id,{
                            'attr' :{
                                'class' : 'form-control'
                            }
                            })}}
                            <div class="col-md-4 col-sm-12">
                            {{form_label(form.name,'name ')}}
                            {{form_widget(form.name,{
                            'attr' :{
                                'class' : 'form-control'
                            }
                            })}}
                               
                            </div>
                            <div class="col-md-4 col-sm-12">
                            {{form_label(form.description,'description ')}}
                            {{form_widget(form.description,{
                            'attr' :{
                                'class' : 'form-control'
                            }
                            })}}
                               
                            </div>
                            
                       
                        </div>

                        {{form_widget(form.save,{
                            'attr' :{
                                'class' : 'btn btn-primary' , 
                                'style':'width: 214px;
    margin-left: 537px;'
                            }
                            })}}
                        
                    </div>
                </div>

            </div>
        </div>
        {{form_end(form)}}
            {% endblock %}